{
  "name": "cramkle",
  "private": true,
  "license": "UNLICENSED",
  "repository": "https://github.com/cramkle/cramkle",
  "scripts": {
    "lint": "eslint --ext ts,tsx .",
    "lint-css": "stylelint '**/*.{scss,css}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ],
    "*.{scss,css}": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "@lucasecdb/eslint-config": "^0.9.1",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.6",
    "prettier": "^2.0.4",
    "stylelint": "^13.3.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.17.0",
    "typescript": "^3.8.3"
  }
}
