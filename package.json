{
  "version": "0.4.9",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "release-it",
    "update-changelog": "node ./scripts/update-changelog.js",
    "update-versions": "node ./scripts/update-versions.js"
  },
  "devDependencies": {
    "release-it": "^12.0.1"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":preserveSemverRanges"
    ],
    "automerge": false,
    "branchPrefix": "chore/",
    "enabledManagers": ["yarn"],
    "labels": ["dependencies"]
  }
}
