{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "files": [
    "bin/start.ts",
    "bin/start-dev.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*"
  ]
}
