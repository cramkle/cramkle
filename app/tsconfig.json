{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "baseUrl": "./",
    "types": ["graphql"],
    "paths": {
      "components/*": ["./src/components/*"],
      "views/*": ["./src/components/views/*"]
    }
  },
  "exclude": ["jest/**/*"]
}
