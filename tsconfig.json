{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "module": "esnext",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "target": "es5",
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "exclude": ["jest/**/*", "jest.config.js", "node_modules"],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js",
    "./.*.js",
    "./src/typings/*.d.ts"
  ]
}
