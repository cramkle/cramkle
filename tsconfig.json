{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "target": "es5",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "types": ["graphql", "jest"],
    "resolveJsonModule": true
  },
  "exclude": ["jest/**/*", "jest.config.js"]
}
